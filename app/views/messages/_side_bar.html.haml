.side-bar
  .side-bar__user
    .side-bar__user__menu
      .side-bar__user__menu__user-name
        = current_user.name
      .side-bar__user__menu__user-icon
        = link_to new_group_path, method: :GET, class: "user-edit__btn" do
          = icon('far', 'edit', class: 'side-bar__user__menu__user-icon__edit-btn')
        = link_to edit_user_path(current_user), class: "user-cog__btn" do
          = icon('fas', 'cog', class: 'side-bar__user__menu__user-icon__cog-btn')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__new-massege
            = group.show_last_message