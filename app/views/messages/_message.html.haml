.chat-main__message-list__Contents{data: {message: {id: message.id}}}
  .chat-main__message-list__box__name      
    = message.user.name
    .chat-main__message-list__box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message
    - if message.content.present?
      %p.chat-main__message-list__message__content
        =message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?